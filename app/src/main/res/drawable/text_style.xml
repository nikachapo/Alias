<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners
        android:radius="30dp"
        />
    <gradient
        android:angle="90"
        android:centerX="50%"
        android:centerColor="#c80099ff"
        android:startColor="#4a03a3"
        android:endColor="#0400ff"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="150dp"
        android:height="80dp"
        />
    <stroke
        android:width="2dp"
        android:color="#75163c70"
        />
</shape>